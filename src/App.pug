script.
    import PlayerPanel from "./PlayerPanel.pug"

    let playersArr = ["Player #1"]

    const addPlayer = () => {
        playersArr.push( "Player #" + (playersArr.length + 1))
        playersArr = playersArr
    }

main
    h1 Darts It!

    button(on:click="{addPlayer}") Add Player

    div

    {#each playersArr as player}
      PlayerPanel(
          name="{player}"
      )

style.
    main {
        text-align: center;
        padding: 1em;
        margin: 0 auto;
    }

    h1 {
        color: #ff3e00;
        text-transform: uppercase;
        font-size: 4em;
        font-weight: 100;
    }

    @media (min-width: 640px) {
        main {
            max-width: none;
        }
    }
